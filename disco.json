{
    "version": "1.0",
    "services":
    {
        "web":
        {
            "port": 8000,
            "volumes":
            [
                {
                    "name": "pgimport",
                    "destinationPath": "/pgimport"
                }
            ]
        },
        "hook:deploy:start:before":
        {
            "type": "command",
            "command": "python manage.py migrate"
        }
    }
}